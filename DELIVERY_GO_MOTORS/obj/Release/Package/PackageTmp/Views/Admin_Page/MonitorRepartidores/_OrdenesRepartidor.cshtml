@model IEnumerable<ZPIDI_PORTAL.Models.DataBase.C_Delivery_StartOrders>

@if (Model.Count() > 0 || Model != null)
{
    foreach (var item in Model)
    {
        TimeSpan hraDife = DateTime.Now.Subtract(item.fecha.Value);
        string tiempo = "";
        if (hraDife.Hours > 0) { tiempo += hraDife.Hours + " hrs "; }
        if (hraDife.Minutes > 0) { tiempo += hraDife.Minutes + " min "; }
        if (hraDife.Seconds > 0) { tiempo += hraDife.Seconds + " seg"; }

        <div class="card border-info mb-3">
            <div class="card-header">#@item.id_order - @item.C_Delivery_sucursales_gps.nombre_suc </div>
            <div class="card-body text-info">
                <div class="row">
                    <div class="col-md-9">
                        <strong>Dirección:</strong>
                        <h4 style="margin:0px;" class="card-title">@item.direccion</h4>
                        <br />
                        <strong class="card-title">Tiempo transcurrido:</strong>
                        <h4 style="margin:0px;"><strong>@tiempo</strong></h4>
                    </div>
                    <div class="col-md-3 text-center">
                        <button class="btn btn-zpidi" onclick="QuitarOrdenRepartidor(@item.id_order)" style="border-radius:100%; padding:15px;"><i class="fa fa-2x fa-hand-paper-o"></i><br />Reasignar</button>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <h4 class="text-center p-5">No hay pedido en tránsito</h4>
}

