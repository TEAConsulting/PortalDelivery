@model IEnumerable<ZPIDI_PORTAL.Models.C_pedidos>

<div class="container-fluid">
    @*<h2><strong>#@Model.FirstOrDefault().id_pedido</strong></h2>*@
    <h4 class="mt-3" style="border-bottom:1px solid black;"><cite>@Model.FirstOrDefault().C_sucursales.nombre</cite></h4>
    <strong>Tu compra:</strong>
    <ul style="border-bottom: 1px solid black;">
        @foreach (var item in Model.FirstOrDefault().C_pedidos_d.GroupBy(x => x.sku_producto))
        {
            <li>@item.Count() @item.FirstOrDefault().C_productos_cat.nombre</li>
        }
    </ul>

    <h4>Total: $@Model.FirstOrDefault().monto.Value.ToString("0.00")</h4>
</div>

