@using System.Globalization;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Public_Page/MainLayout.cshtml";
}

<div class="container">
    <div class="row">
        <h4 class="text-uppercase mb-1 text-center">Mi perfil</h4> @*<span class="text-primary">Solicitudes</span>*@
        <h6 class="text-left">Actualiza tus datos personales</h6>
    </div>

    <div>
        <h5>Nombres</h5>
        <input type="text" value="@Session["ses_nombre"]" class="form-control" />

        <br />
        <h5>Apellidos</h5>
        <input type="text" value="@Session["ses_apellido"]" class="form-control" />

        <br />
        <h5>E-mai</h5>
        <input type="text" value="@Session["ses_email"]" class="form-control" />

        <br />
        <h5>Celular</h5>
        <div class="row">
            <div class="column_responsive_3">
                <select class="form-control">
                    <option value="+52">+52</option>
                </select>
            </div>
            <div class="column_responsive_9">
                <input type="number" value="@Session["ses_telefono"]" />
            </div>
        </div>

        <br />
        <h5>Fecha de nacimiento</h5>
        <input type="date" class="form-control" />

        <br />
        <h5>Sexo</h5>
        <div class="row">
            <div class="column_responsive_6 row">
                <div class="row">
                    <span>Hombre  <input type="radio" name="inputsexo" checked/></span>

                </div>
            </div>
            <div class="column_responsive_6 row">
                <span>Mujer <input type="radio" name="inputsexo" /></span>
            </div>
        </div>

        <br />
        <h5>Vehiculo</h5>
        <span>Bicicleta <input type="radio" name="inputvehiculo" /></span>
        <span style="margin-left:10%;">Moto <input type="radio" name="inputvehiculo" checked/></span>
        <span style="margin-left:10%;">Carro <input type="radio" name="inputvehiculo" /></span>

    </div>
    <hr />

